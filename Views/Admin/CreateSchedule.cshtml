@model AnyoneForTennis.Models.CreateScheduleViewModel

<form asp-action="CreateSchedule" method="post">
    <input type="hidden" asp-for="ScheduleId" />
    <div class="form-group">
        <label asp-for="EventName">Event Name:</label>
        <input asp-for="EventName" class="form-control" id="EventName" required>
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Date:</label>
        <input asp-for="Date" type="date" class="form-control" id="Date" required>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location">Location:</label>
        <input asp-for="Location" class="form-control" id="Location" required>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoachId">Coach:</label>
        <select asp-for="CoachId" class="form-control" required>
            @foreach (var coach in Model.Coaches)
            {
                <option value="@coach.CoachId">@coach.FirstName @coach.LastName</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create Schedule</button>
</form>
