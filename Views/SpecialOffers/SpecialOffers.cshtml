@page
@model AnyoneForTennis.Models.SpecialOffersViewModel

@using AnyoneForTennis.Models
<h1>Special Offers</h1>

<div class="row">
    @foreach (var offer in Model.SpecialOffers)
    {
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@offer.Title</h5>
                    <p class="card-text">@offer.Description</p>
                    <p class="card-text">Start Date: @offer.StartDate.ToShortDateString()</p>
                    <p class="card-text">End Date: @offer.EndDate.ToShortDateString()</p>
                    <a href="/SpecialOffer/Details/@offer.SpecialOfferId" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>
